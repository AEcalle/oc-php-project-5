{% extends "back/template.html.twig" %}
{% block body %}

<header class="masthead" style="background-image: url('../assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Liste des Utilisateurs</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 py-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
        {% for message in session.getFlashBag.get('success') %}
            <div class="text-success small">{{ message }}</div>
        {% endfor %}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Créé le</th>
                        <th scope="col">Role</th>
                        <th scope="col">Modifier / Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.createdAt|date('d/m/y') }}</td>
                        <td>{{ user.role }}</td>
                        <td><a href="/updateUser/{{ user.id }}">Modifier / Supprimer</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
