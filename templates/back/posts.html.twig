{% extends "back/template.html.twig" %}
{% block body %}

<header class="masthead" style="background-image: url('../assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Liste des Posts</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 py-5 justify-content-center">
        <div class="col-12">
        {% for message in session.getFlashBag.get('success') %}
            <div class="text-success small">{{ message }}</div>
        {% endfor %}
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Titre</th>
                <th scope="col">Créé le</th>
                <th scope="col">Modifié le</th>
                <th scope="col">Auteur</th>
                <th scope="col">Modifier / Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.createdAt|date("d/m/Y") }}</td>
                        <td>{{ post.updatedAt|date("d/m/Y") }}</td>
                        <td>{{ post.author }}</td>
                        <td><a href="/updatePost/{{ post.id }}">Modifier / Supprimer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
