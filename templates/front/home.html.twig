{% extends "front/template.html.twig" %}
{% block body %}

<header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Aurélien Ecalle</h1>
                    <span class="subheading">Le développeur qu'il vous faut !</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            {% for post in posts %}
            <div class="post-preview">
                <a href="post.php">
                    <h2 class="post-title">{{post.title}}</h2>
                    <h3 class="post-subtitle">{{post.standfirst}}</h3>
                </a>
                <p class="post-meta">
                    Publié par
                    <a href="#!">Aurélien Ecalle</a>
                    {{post.updatedAt|date("d/m/Y")}}
                </p>
            </div>
       
            <hr class="my-4" />                      
            {% endfor %}
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="/blog">Tous les Posts →</a></div>
        </div>
    </div>
    <div id="contact" class="row gx-4 gx-lg-5 py-5 justify-content-center border-top">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <h2>Contact</h2>
            {% for errorMessage in form.constraintViolation %}
                <div class="text-danger small">{{errorMessage}}</div> 
            {% endfor %}
            {% if form.constraintViolation is empty %}
                <div class="text-success small">Votre message a bien été envoyé !</div> 
            {% endif %}
            <form id="contactForm" method="post" action="#contact">
            <input type="hidden" name="{{form.name}}_token" id="{{form.name}}_token" value="{{form.token}}">
                <div class="form-floating">
                    <input class="form-control" id="name" name="name" type="text" placeholder="Nom et prénom" value="{{contact.name}}" required />
                    <label for="name">Nom Prénom</label>                            
                </div>
                <div class="form-floating">
                    <input class="form-control" id="email" name="email" type="email" placeholder="Email" value="{{contact.email}}" required />
                    <label for="email">Email</label>                            
                </div>                      
                <div class="form-floating">
                    <textarea class="form-control" id="message" name="message" placeholder="Message" style="height: 12rem" required>{{contact.message}}</textarea>
                    <label for="message">Message</label>                            
                </div>                                               
                <button class="btn btn-primary my-5 text-uppercase" id="submitButton" type="submit">Envoyer</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
       
