{% extends "front/template.html.twig" %}
{% block body %}
<header class="masthead" style="background-image: url('../assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Blog</h1>
                    <span class="subheading">Les actus du développement web</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            {% for post in posts %}
            <div class="post-preview">
                <a href="../post/{{post.id}}-{{post.slug}}">
                    <h2 class="post-title">{{post.title}}</h2>
                    <h3 class="post-subtitle">{{post.standfirst}}</h3>
                </a>
                <p class="post-meta">
                    Publié par
                    <a href="#">Aurélien Ecalle</a>
                    {{post.updatedAt|date("d/m/Y")}}
                </p>
            </div>                       
            <hr class="my-4" />                      
            {% endfor %}  
            {% if nbPages > 1 %}
                {% set before = page - 1 %}
                {% set next = page + 1 %}  
                <div class="pagination mb-5">
                    {% if page >1 %}
                        <a class="me-3" href="../blog/{{before}}"><</a>
                    {% endif %}                     
                    {% for i in 1 .. nbPages %}
                        <a class="me-3 {% if i == page %}text-info{% endif %}" href="../blog/{{i}}">{{i}}</a>
                    {% endfor %}
                    {% if page < nbPages %}
                        <a class="me-3" href="../blog/{{next}}">></a>
                    {% endif %} 
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}